<core:FragmentDefinition xmlns="sap.m"
                         xmlns:core="sap.ui.core">
	<Dialog
	        title="{i18n>Detail.comment.Title}"
	        type="Message"
	        afterClose="onCommentAfterClose">
		<content>
			<MessageStrip
				visible="{detailView>/comment/warningVisible}"
				text="{i18n>Detail.comment.warning}"
				type="Warning"
				showIcon="true"
				showCloseButton="false"></MessageStrip>
			<TextArea width="100%"
					  placeholder=""
			          liveChange="onCommentTextLiveChange"
			          value="{detailView>/comment/value}"></TextArea>
		</content>
		<beginButton>
			<Button
			        text="{i18n>Detail.comment.Submit}"
			        enabled="true"
			        press="onCommentBeginPress"></Button>
		</beginButton>
		<endButton>
			<Button
			        text="{i18n>Detail.comment.Cancel}"
			        press="onCommentEndPress"></Button>
		</endButton>
	</Dialog>
</core:FragmentDefinition>