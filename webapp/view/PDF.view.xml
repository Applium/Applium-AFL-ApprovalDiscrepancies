<mvc:View xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true" controllerName="fr.applium.afl.aflapprovaldisc.controller.PDF" height="100%">
    <Page class="sapUiNoContentPadding" enableScrolling="false">
        <headerContent>
            <OverflowToolbarButton type="Transparent" tooltip="{i18n>detail.Header.Close}" icon="sap-icon://decline" press=".onPressClosePDF"/>
        </headerContent>
        <content>
            <PDFViewer id="pdfViewer" showDownloadButton="false" height="100%">
                <layoutData>
                    <FlexItemData growFactor="1"/>
                </layoutData>
            </PDFViewer>
        </content>
    </Page>
</mvc:View>